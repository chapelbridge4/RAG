{
  "dashboard": {
    "id": null,
    "title": "RAG System Performance Dashboard",
    "tags": ["rag", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Query Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(rag_query_duration_seconds)",
            "refId": "A",
            "legendFormat": "Avg Response Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Total Queries Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(rag_queries_total[5m])",
            "refId": "A",
            "legendFormat": "Queries/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Validation Scores Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rag_validation_scores",
            "refId": "A",
            "legendFormat": "{{metric_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Active Queries",
        "type": "stat",
        "targets": [
          {
            "expr": "rag_active_queries",
            "refId": "A",
            "legendFormat": "Active"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Corrections Made",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(rag_corrections_total[5m])",
            "refId": "A",
            "legendFormat": "Corrections/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}